{
  "policies": [
    {
      "policy_id": "project-copilot-v1",
      "document_bindings": [
        {
          "binding_id": "user_profile",
          "namespace": "user",
          "path": "profile.json",
          "path_template": null,
          "schema_id": "memory.user.profile",
          "schema_version": "1.0.0",
          "max_chars": 12000,
          "read_priority": 10,
          "write_mode": "restricted_patch",
          "allowed_paths": [
            "/profile",
            "/projects_index"
          ],
          "required_content_paths": [
            "/profile",
            "/projects_index"
          ],
          "max_content_chars": 9000,
          "max_array_items": 200
        },
        {
          "binding_id": "long_term_memory",
          "namespace": "user",
          "path": "long_term_memory.json",
          "path_template": null,
          "schema_id": "memory.user.long_term_memory",
          "schema_version": "1.0.0",
          "max_chars": 18000,
          "read_priority": 20,
          "write_mode": "restricted_patch",
          "allowed_paths": [
            "/preferences",
            "/durable_facts",
            "/pending_confirmations"
          ],
          "required_content_paths": [
            "/preferences"
          ],
          "max_content_chars": 14000,
          "max_array_items": 300
        },
        {
          "binding_id": "project_memory",
          "namespace": "projects",
          "path": null,
          "path_template": "{project_id}.json",
          "schema_id": "memory.project",
          "schema_version": "1.0.0",
          "max_chars": 32000,
          "read_priority": 30,
          "write_mode": "restricted_patch",
          "allowed_paths": [
            "/summary",
            "/facets",
            "/recent_notes"
          ],
          "required_content_paths": [
            "/summary"
          ],
          "max_content_chars": 28000,
          "max_array_items": 400
        }
      ],
      "retention_rules": {
        "snapshots_days": 60,
        "events_days": 365,
        "audit_days": 365
      }
    }
  ]
}
